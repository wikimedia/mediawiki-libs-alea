{
	"name": "wikimedia/alea",
	"description": "PHP port of the (non-cryptographic) Alea pseudo-random number generator",
	"keywords": [
		"prng",
		"alea"
	],
	"license": "MIT",
	"type": "library",
	"homepage": "https://www.mediawiki.org/wiki/Alea",
	"authors": [
		{
			"name": "Johannes BaagÃ¸e",
			"email": "baagoe@baagoe.org"
		},
		{
			"name": "C. Scott Ananian",
			"email": "cananian@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\Alea\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Wikimedia\\Alea\\Tests\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.2.9"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "39.0.0",
		"mediawiki/mediawiki-phan-config": "0.11.1",
		"mediawiki/minus-x": "1.1.1",
		"ockcyp/covers-validator": "1.4.0",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"phpunit/phpunit": "^8.5|^9.5",
		"wikimedia/update-history": "1.0.1"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"phan": "phan --allow-polyfill-parser",
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"update-history": "update-history patch",
		"phpcs": "phpcs -sp"
	}
}
